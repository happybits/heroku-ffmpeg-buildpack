#!/bin/sh

echo "-----> Install ffmpeg"
BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3
VENDOR_DIR="vendor"

echo "BUILD_DIR: $BUILD_DIR"
echo "ENV_DIR: $ENV_DIR"
echo "exporting PATH:"
ls $ENV_DIR
echo "oauth token:"
cat $ENV_DIR/GIT_OAUTH
export "GIT_OAUTH=$(cat $ENV_DIR/GIT_OAUTH)"
echo "GIT_OAUTH: $GIT_OAUTH"


echo "Cloning with access token: $GIT_OAUTH"
git clone https://$GIT_OAUTH@github.com/happybits/happybits-ffmpeg-fork
cd happybits-ffmpeg-fork
configure
make
make install

# echo "exporting PATH" | indent
# PROFILE_PATH="$BUILD_DIR/.profile.d/ffmpeg.sh"
# mkdir -p $(dirname $PROFILE_PATH)
# echo 'export PATH="$PATH:${HOME}/vendor/ffmpeg"' >> $PROFILE_PATH
